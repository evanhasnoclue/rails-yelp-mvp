<h1 class="title">New Restaurant</h1>
<%= simple_form_for(@restaurant) do |f| %>
    <div class="form-group">
      <%= f.input :name, placeholder: "Restaurant name", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :Category %>
      <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :phone_number, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.input :address, class: "form-control" %>
    </div>
    <%= f.submit :Add, class: "btn btn-primary" %>
<% end %>
